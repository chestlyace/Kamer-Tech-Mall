<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-md">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center py-4">
        <a href="/" class="text-2xl font-bold text-indigo-600">
          <i class="fas fa-store mr-2"></i>Kamer Tech Mall
        </a>
        <div class="flex items-center space-x-4">
          <a href="/seller/dashboard" class="text-gray-700 hover:text-indigo-600">
            <i class="fas fa-tachometer-alt mr-1"></i>Dashboard
          </a>
          <a href="/seller/profile" class="text-indigo-600 font-semibold">
            <i class="fas fa-user mr-1"></i><%= seller.username %>
          </a>
          <a href="/auth/logout" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
            <i class="fas fa-sign-out-alt mr-1"></i>Logout
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if (success_messages && success_messages.length > 0) { %>
    <div class="container mx-auto px-4 mt-4">
      <% success_messages.forEach(function(message) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
          <%= message %>
        </div>
      <% }); %>
    </div>
  <% } %>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
      <!-- Profile Header -->
      <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
        <div class="flex items-center space-x-6 mb-6">
          <div class="w-24 h-24 bg-indigo-600 rounded-full flex items-center justify-center text-white text-4xl font-bold">
            <%= seller.username.charAt(0).toUpperCase() %>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-900"><%= seller.username %></h1>
            <p class="text-gray-600"><%= seller.email %></p>
            <div class="mt-2">
              <% if (seller.status === 'active') { %>
                <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <i class="fas fa-check-circle mr-1"></i>Active
                </span>
              <% } else if (seller.status === 'pending') { %>
                <span class="inline-block bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-semibold">
                  <i class="fas fa-clock mr-1"></i>Pending Approval
                </span>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Edit Profile Form -->
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">
          <i class="fas fa-edit mr-2 text-indigo-600"></i>Edit Profile
        </h2>

        <!-- Error Messages -->
        <% if (errors && errors.length > 0) { %>
          <div class="mb-6">
            <% errors.forEach(function(error) { %>
              <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-2">
                <%= error.msg %>
              </div>
            <% }); %>
          </div>
        <% } %>

        <form action="/seller/profile" method="POST" class="space-y-6">
          <!-- Business Name -->
          <div>
            <label for="businessName" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-building mr-1"></i>Business Name
            </label>
            <input type="text" id="businessName" name="businessName" required
                   value="<%= seller.business_name || '' %>"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
          </div>

          <!-- Phone -->
          <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-phone mr-1"></i>Phone Number
            </label>
            <input type="tel" id="phone" name="phone"
                   value="<%= seller.phone || '' %>"
                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                   placeholder="+237 XXX XXX XXX">
          </div>

          <!-- Address -->
          <div>
            <label for="address" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-map-marker-alt mr-1"></i>Business Address
            </label>
            <textarea id="address" name="address" rows="3"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                      placeholder="Your business address"><%= seller.address || '' %></textarea>
          </div>

          <!-- Non-editable fields -->
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="font-semibold text-gray-700 mb-3">Account Information (Read-only)</h3>
            <div class="space-y-2">
              <div>
                <span class="text-gray-600 text-sm">Username:</span>
                <span class="text-gray-900 font-medium ml-2"><%= seller.username %></span>
              </div>
              <div>
                <span class="text-gray-600 text-sm">Email:</span>
                <span class="text-gray-900 font-medium ml-2"><%= seller.email %></span>
              </div>
              <div>
                <span class="text-gray-600 text-sm">Member Since:</span>
                <span class="text-gray-900 font-medium ml-2">
                  <%= new Date(seller.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                </span>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="flex space-x-4">
            <button type="submit" 
                    class="flex-1 bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition duration-200">
              <i class="fas fa-save mr-2"></i>Save Changes
            </button>
            <a href="/seller/dashboard" 
               class="flex-1 text-center bg-gray-200 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-300 transition duration-200">
              <i class="fas fa-times mr-2"></i>Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white mt-16">
    <div class="container mx-auto px-4 py-8">
      <div class="text-center">
        <p>&copy; <%= new Date().getFullYear() %> Kamer Tech Mall. All rights reserved.</p>
      </div>
    </div>
  </footer>
</body>
</html>

